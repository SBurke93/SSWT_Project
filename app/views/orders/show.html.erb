    <p>
    <strong>Order date:</strong>
    <%= @order.order_date %>
    </p>

    <p>
    <strong>User:</strong>
    <%= @order.user.email %>
    </p>

    <p>
    <strong>Status:</strong>
    <%= @order.status %>
    </p>

