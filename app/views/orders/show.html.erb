    <div class="mainCont">
      <h1>Items in this order are:</h1>
      <table id="customers">
    
      <thead>
      <tr>
      <th>Order ID</th>
      <th>Item ID</th>
      <th>Title</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Total</th>
      <th colspan="6"></th>
      </tr>
      </thead>
    
    
      <% @orderitems.each do |orderitem| %>
      <% @total = 0 %>
      <tr>
      <td>
      <%= orderitem.order_id %></td>
      <td>
      <%= orderitem.id %>
      </td>
      <td><%= orderitem.title %></td>
      <td><%= orderitem.quantity %></td>
      <td><%= orderitem.price %></td>
      <% linetotal =(orderitem.quantity * orderitem.price) %>
      <% @total += linetotal %>
      <td><%= @total %></td>
      </tr>
    

      <br>
<% end %>

</table> 


  
