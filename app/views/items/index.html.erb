<% provide(:title, "Catalog") %>


<div id="product_container">
  
        <h1>Featured:</h1>
            
              <% @items.each do |item| %>
                <div class="product_holder">
              
                <%= link_to (image_tag item.image_url, :class => "product_holderIm"), item %>
                
                <h2><%= item.title %></h2>
                
                <%= link_to 'View',  item, :class => "button", :role => "button" %>
                <a href= "/cart/<%= item.id %>" class="button"> Add To Cart </a>
                
                <% if user_signed_in? %>
                <% if current_user.admin? %>
                
                <%= link_to 'Edit',  edit_item_path(item), :class => "button", :role => "button" %>
                <%= link_to 'Destroy',  item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %>
                
                <% end %> 
                <% end %>
                          
                </div>  
            
              <% end %>

</div>


