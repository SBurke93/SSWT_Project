
    
<h1>Categories</h1>
    
<% @categories.each do |category| %>
    
    <div class="product_holder">
    
        <h2><%= category.title %></h2>
        <%= link_to (image_tag category.image, :class=> "product_holderIm"), category %>
        <p><%= category.description %></p>
        <p><a href="/category/<%= category.title %>" class="button"><%= category.title %></a></p>
    
    </div>
<% end %>
    
    
